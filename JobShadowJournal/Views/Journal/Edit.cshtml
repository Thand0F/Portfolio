@model JobShadowJournal.Models.JournalEntry

@{
    ViewData["Title"] = "Edit Entry";
}

<h2 class="mb-4">✏ Edit Journal Entry</h2>

<div class="card shadow-sm p-4">
    <form method="post">

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Title</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Content</label>
            <textarea asp-for="Content" class="form-control" rows="6"></textarea>
        </div>

        <button class="btn btn-primary btn-rounded">Update Entry</button>
        <a href="/Journal/Index" class="btn btn-secondary btn-rounded">Cancel</a>

    </form>
</div>