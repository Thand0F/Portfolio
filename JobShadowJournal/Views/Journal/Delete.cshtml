@model JobShadowJournal.Models.JournalEntry

<h2 class="mb-4 text-danger">🗑 Delete Journal Entry</h2>

<div class="alert alert-danger">
    <strong>Are you sure?</strong> This action cannot be undone.
</div>

<div class="card p-4 shadow-sm mb-3">
    <h4>@Model.Title</h4>
    <p>@Model.Content</p>
</div>

<a class="btn btn-danger" href="/Journal/DeleteConfirmed/@Model.Id">Delete</a>
<a class="btn btn-secondary" href="/Journal/Index">Cancel</a>