@model JobShadowJournal.Models.JournalEntry

@{
    ViewData["Title"] = "Create Entry";
}

<h2 class="mb-4">➕ Create Journal Entry</h2>

<div class="card shadow-sm p-4">
    <form method="post">

        <div class="mb-3">
            <label class="form-label">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter a title..." required />
        </div>

        <div class="mb-3">
            <label class="form-label">Content</label>
            <textarea asp-for="Content" class="form-control" rows="6" placeholder="Write what you learned today..."></textarea>
        </div>

        <button class="btn btn-success btn-rounded">Save Entry</button>
        <a href="/Journal/Index" class="btn btn-secondary btn-rounded">Cancel</a>

    </form>
</div>
